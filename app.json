{
    "name": "Authy 2FA with Python and Flask",
    "description": "A Flask app that demonstrates two factor authentication with the Authy API.",
    "keywords": [
        "python",
        "flask",
        "2 factor authentication",
        "2fa"
    ],
    "website": "https://www.authy.com",
    "repository": "https://github.com/TwilioDevEd/authy2fa-flask",
    "env": {
        "SECRET_KEY": {
            "description": "A secret key for the Flask app",
            "generator": "secret"
        },
        "AUTHY_API_KEY": {
            "description": "API key for Authy app.",
            "value": "xxxxxxxxxxxxxxxxxxxxxxx"
        }
    },
    "addons" : [
        "heroku-postgresql"
    ],
    "scripts": {
        "postdeploy": "python create_db.py"
    },
    "success_url": "/"
}
